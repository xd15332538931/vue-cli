{
    "compilerOptions": {
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "noEmitOnError": true,
      "target": "esnext",
      "module": "esnext",
      "strict": true,
      "allowJs": true,
      "noEmit": false,
      "noImplicitThis": true,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "baseUrl": ".",
      "paths": {
        "@/*": ["src/*"]
      }
    },
    "include": ["**/*.vue", "**/*.ts", "shims.d.ts"],
    "exclude": ["node_modules", "dist"]
  }